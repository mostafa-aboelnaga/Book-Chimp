<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./stylesheets/register_style.css" />
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />

    <link rel="icon" href="./images/shape_logo_bookchimp.svg" />
    <title>BookChimp - A Jungle Full of Books</title>
  </head>
  <body>
    <div class="nav-container fixed-top">
      <nav class="nav">
        <div class="logo_text">
          <a href="./home"
            ><img src="./images/text_logo_bookchimp.svg" alt=""
          /></a>
        </div>
        <div class="logo_shape">
          <a href="./home"
            ><img src="./images/shape_logo_bookchimp.svg" alt=""
          /></a>
        </div>
        <ul class="tabs">
          <li><a href="./about">About</a></li>
          <li><a href="./login">Login</a></li>
        </ul>
      </nav>
    </div>

    <div class="register-div">
      <form
        class="form-register"
        action="/api/user/register"
        method="post"
        name="register-form"
      >
        <h3 class="h3 mb-3 font-weight-normal">Welcome to BookChimp!</h3>
        <label for="title" class="sr-only">Name</label>
        <input
          autocomplete="off"
          type="text"
          class="form-control"
          placeholder="Name"
          name="name"
        />

        <label for="email" class="sr-only">Email</label>
        <input
          type="text"
          class="form-control"
          placeholder="Email"
          name="email"
        />

        <label for="password" class="sr-only">Password</label>
        <input
          type="password"
          class="form-control"
          placeholder="Password"
          name="password"
        />

        <button class="btn btn-lg btn-primary btn-block" type="submit">
          Register Now
        </button>
      </form>
    </div>

    <% if (error == "true"){ %>
    <div
      class="container alert alert-danger"
      style="
        max-width: 350px;
        text-align: center;
        font-weight: 500;
        text-transform: capitalize; ;
      "
      role="alert"
    >
      <%= errorMessage %>
    </div>
    <% } %>

    <div class="container" style="text-align: center">
      Already Have an Account?
      <a href="./login">Login Here</a>
    </div>
  </body>
</html>
